<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_my_body_front5">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@mipmap/bg_subject_title"
        android:gravity="center"
        style="@style/exerciseTitle"
        android:text="@string/study_body_one_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/footIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_marginEnd="@dimen/dp_70"
        android:src="@mipmap/img_foot"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/titleTv" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/footIv"
        app:layout_constraintEnd_toStartOf="@+id/footIv"
        app:layout_constraintTop_toTopOf="@+id/footIv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hht_foot_ch"
            android:textColor="@color/text_color_221815"
            android:textSize="@dimen/sp_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hht_foot_en"
            android:textColor="@color/text_color_221815"
            android:textSize="@dimen/sp_21" />
    </LinearLayout>

    <ImageView
        android:id="@+id/toeIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_43"
        android:src="@mipmap/img_toe"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/titleTv" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/toeIv"
        app:layout_constraintStart_toEndOf="@+id/toeIv"
        app:layout_constraintTop_toTopOf="@+id/toeIv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hht_toe_ch"
            android:textColor="@color/text_color_221815"
            android:textSize="@dimen/sp_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hht_toe_en"
            android:textColor="@color/text_color_221815"
            android:textSize="@dimen/sp_21" />
    </LinearLayout>

    <ImageView
        android:id="@+id/kneeIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_74"
        android:src="@mipmap/img_knee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/kneeIv"
        app:layout_constraintEnd_toStartOf="@+id/kneeIv"
        app:layout_constraintTop_toTopOf="@+id/kneeIv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hht_knee_ch"
            android:textColor="@color/text_color_221815"
            android:textSize="@dimen/sp_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hht_knee_en"
            android:textColor="@color/text_color_221815"
            android:textSize="@dimen/sp_21" />
    </LinearLayout>

    <ImageView
        android:id="@+id/legIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_74"
        android:src="@mipmap/img_leg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/legIv"
        app:layout_constraintStart_toEndOf="@+id/legIv"
        app:layout_constraintTop_toTopOf="@+id/legIv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hht_leg_ch"
            android:textColor="@color/text_color_221815"
            android:textSize="@dimen/sp_21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hht_leg_en"
            android:textColor="@color/text_color_221815"
            android:textSize="@dimen/sp_21" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>