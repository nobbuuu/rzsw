<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_on_the_street_back9">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <com.ruffian.library.widget.RTextView
        android:id="@+id/selectTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_8"
        android:paddingStart="@dimen/dp_88"
        android:paddingTop="@dimen/dp_13"
        android:paddingEnd="@dimen/dp_88"
        android:paddingBottom="@dimen/dp_13"
        android:text="@string/frame_photos_cn"
        android:textSize="18sp"
        app:background_normal="#FF952B"
        app:corner_radius="@dimen/dp_88"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text_color_normal="@color/white" />

    <TextView
        android:id="@+id/titleTv"
        style="@style/exerciseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@mipmap/bg_subject_title"
        android:gravity="center"
        android:text="@string/exercise_exercise_six_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step9Iv"
        android:layout_width="652dp"
        android:layout_height="151dp"
        app:srcImg="@mipmap/img_hand_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step1Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        app:srcImg="@mipmap/img_photo_frame_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/step5Iv" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step2Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        app:srcImg="@mipmap/img_photo_frame_1"
        app:layout_constraintBottom_toBottomOf="@+id/step5Iv"
        app:layout_constraintStart_toEndOf="@+id/step5Iv"
        app:layout_constraintTop_toTopOf="@+id/step5Iv" />


    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step3Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        app:srcImg="@mipmap/img_square_1"
        app:layout_constraintBottom_toBottomOf="@+id/step2Iv"
        app:layout_constraintStart_toEndOf="@+id/step2Iv"
        app:layout_constraintTop_toTopOf="@+id/step2Iv" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step4Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        app:srcImg="@mipmap/img_park_1"
        app:layout_constraintBottom_toBottomOf="@+id/step3Iv"
        app:layout_constraintStart_toEndOf="@+id/step3Iv"
        app:layout_constraintTop_toTopOf="@+id/step3Iv" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step5Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="32dp"
        app:srcImg="@mipmap/img_photo_frame_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step6Iv"
        android:layout_width="134dp"
        android:layout_height="135dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="8dp"
        app:srcImg="@mipmap/img_photo_frame_4"
        app:layout_constraintBottom_toBottomOf="@+id/step1Iv"
        app:layout_constraintStart_toEndOf="@+id/step1Iv" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step7Iv"
        android:layout_width="123dp"
        android:layout_height="149dp"
        android:layout_marginStart="72dp"
        app:srcImg="@mipmap/img_museum_1"
        app:layout_constraintBottom_toBottomOf="@+id/step6Iv"
        app:layout_constraintStart_toEndOf="@+id/step6Iv" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/step8Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="16dp"
        app:srcImg="@mipmap/img_fountain_1"
        app:layout_constraintBottom_toBottomOf="@+id/step9Iv"
        app:layout_constraintStart_toEndOf="@+id/step7Iv" />


</androidx.constraintlayout.widget.ConstraintLayout>