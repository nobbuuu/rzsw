<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_exercise_one_bg">

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/ear1Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_26"
        app:layout_constraintBottom_toBottomOf="@+id/noseIv"
        app:layout_constraintEnd_toStartOf="@+id/eye1Iv"
        app:layout_constraintTop_toTopOf="@+id/noseIv"
        app:srcImg="@mipmap/img_ear_1" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/ear2Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        app:layout_constraintBottom_toBottomOf="@+id/noseIv"
        app:layout_constraintStart_toEndOf="@+id/eye2Iv"
        app:layout_constraintTop_toTopOf="@+id/noseIv"
        app:srcImg="@mipmap/img_ear_2" />

    <ImageView
        android:id="@+id/bodyBgIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_body_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/eye1Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_27"
        android:layout_marginBottom="@dimen/dp_25"
        app:layout_constraintBottom_toBottomOf="@+id/noseIv"
        app:layout_constraintEnd_toStartOf="@+id/noseIv"
        app:layout_constraintTop_toTopOf="@+id/noseIv"
        app:srcImg="@mipmap/img_eye_1" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/eye2Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_25"
        app:layout_constraintBottom_toBottomOf="@+id/noseIv"
        app:layout_constraintStart_toEndOf="@+id/noseIv"
        app:layout_constraintTop_toTopOf="@+id/noseIv"
        app:srcImg="@mipmap/img_eye_2" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/noseIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@+id/bodyBgIv"
        app:layout_constraintEnd_toEndOf="@+id/bodyBgIv"
        app:layout_constraintStart_toStartOf="@+id/bodyBgIv"
        app:layout_constraintTop_toTopOf="@+id/bodyBgIv"
        app:srcImg="@mipmap/img_nose_small" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/mouthIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        app:layout_constraintEnd_toEndOf="@+id/noseIv"
        app:layout_constraintStart_toStartOf="@+id/noseIv"
        app:layout_constraintTop_toBottomOf="@+id/noseIv"
        app:srcImg="@mipmap/img_mouth_small" />

    <ImageView
        android:id="@+id/headsetIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_headset"
        app:layout_constraintEnd_toStartOf="@+id/ear1Iv"
        app:layout_constraintTop_toBottomOf="@+id/ear1Iv" />

    <ImageView
        android:id="@+id/flowerIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_flower_bouquet"
        app:layout_constraintStart_toEndOf="@+id/ear2Iv"
        app:layout_constraintTop_toBottomOf="@+id/ear2Iv" />

    <ImageView
        android:id="@+id/hamburgerIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_hamburger"
        app:layout_constraintStart_toStartOf="@+id/headsetIv"
        app:layout_constraintTop_toTopOf="@id/bodyBgIv" />

    <ImageView
        android:id="@+id/drawIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_draw"
        app:layout_constraintEnd_toEndOf="@+id/flowerIv"
        app:layout_constraintTop_toTopOf="@+id/bodyBgIv" />

    <TextView
        android:id="@+id/titleTv"
        style="@style/exerciseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_17"
        android:background="@mipmap/bg_subject_title"
        android:gravity="center"
        android:text="@string/exercise_body_one_title"
        app:layout_constraintBottom_toTopOf="@+id/bodyBgIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/selectTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:paddingStart="@dimen/dp_88"
        android:paddingTop="@dimen/dp_13"
        android:paddingEnd="@dimen/dp_88"
        android:paddingBottom="@dimen/dp_13"
        android:text="@string/hht_select"
        android:textSize="18sp"
        app:background_normal="#FF952B"
        app:corner_radius="@dimen/dp_88"
        app:layout_constraintBottom_toTopOf="@+id/titleTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:text_color_normal="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>