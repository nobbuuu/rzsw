<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_career_back_2">

    <com.ruffian.library.widget.RTextView
        android:id="@+id/selectTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:paddingStart="@dimen/dp_88"
        android:paddingTop="@dimen/dp_13"
        android:paddingEnd="@dimen/dp_88"
        android:paddingBottom="@dimen/dp_13"
        android:text="@string/exercise_career_find_tools_cn"
        android:textSize="18sp"
        app:background_normal="#FF952B"
        app:corner_radius="@dimen/dp_88"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text_color_normal="@color/white" />

    <TextView
        android:id="@+id/titleTv"
        style="@style/exerciseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@mipmap/bg_subject_title"
        android:gravity="center"
        android:text="@string/exercise_career_help_find_tools_cn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTv" />


    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/setp1Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="104dp"
        app:isDrag="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        app:srcImg="@mipmap/img_sewing_machine" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/setp2Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        app:isDrag="true"
        app:layout_constraintBottom_toBottomOf="@+id/setp1Iv"
        app:layout_constraintStart_toEndOf="@+id/setp1Iv"
        app:layout_constraintVertical_bias="0.375"
        app:srcImg="@mipmap/img_fork" />


    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/setp3Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/setp2Iv"
        app:layout_constraintStart_toEndOf="@+id/setp2Iv"
        app:srcImg="@mipmap/img_farmer_1" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/setp4Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/setp3Iv"
        app:layout_constraintStart_toEndOf="@+id/setp3Iv"
        app:srcImg="@mipmap/img_cleaner_1" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/setp5Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:isDrag="true"
        app:layout_constraintEnd_toEndOf="@+id/setp1Iv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/setp1Iv"
        app:layout_constraintTop_toBottomOf="@+id/setp1Iv"
        app:srcImg="@mipmap/img_shears" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/setp6Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:isDrag="true"
        app:layout_constraintBottom_toBottomOf="@+id/setp5Iv"
        app:layout_constraintEnd_toEndOf="@+id/setp2Iv"
        app:layout_constraintStart_toStartOf="@+id/setp2Iv"
        app:srcImg="@mipmap/img_broom_1" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/setp7Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="@+id/setp3Iv"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="@+id/setp3Iv"
        app:layout_constraintTop_toBottomOf="@+id/setp3Iv"
        app:srcImg="@mipmap/img_gardener_1" />

    <com.blackview.search.widget.ToggleImageView
        android:id="@+id/setp8Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/setp7Iv"
        app:layout_constraintEnd_toEndOf="@+id/setp4Iv"
        app:layout_constraintStart_toStartOf="@+id/setp4Iv"
        app:srcImg="@mipmap/img_tailor_1" />


</androidx.constraintlayout.widget.ConstraintLayout>