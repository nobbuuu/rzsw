<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_jrts1">

    <ImageView
        android:id="@+id/backIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_18"
        android:src="@mipmap/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.blackview.search.widget.TodaySeekItemView
        android:id="@+id/seekView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backIv" />

    <com.blackview.search.widget.TodaySeekItemView
        android:id="@+id/seekView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_58"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.blackview.search.widget.TodaySeekItemView
        android:id="@+id/seekView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekView1" />

    <com.ruffian.library.widget.RFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:background_normal="@color/white"
        app:corner_radius_bottom_left="@dimen/dp_20"
        app:corner_radius_bottom_right="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_65"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@string/hht_today_seek"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </com.ruffian.library.widget.RFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>